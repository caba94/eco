{% extends 'base.html.twig' %}

{% block title %}
	{{ craft.name }}
{% endblock %}

{% block body %}
	<table>
		<tr>
			{# <th><img src={{ asset('/images/'~craft.img) }} alt=""></th> #}
			<th>
				<h4>{{ craft.name }}</h4>
			</th>


		</tr>
		<ul class="list-group">
			{%  for rawcraft in craft.rawCrafts %}
				<tr>
					<th>
						<li class="list-group-item d-flex justify-content-between align-items-center">
							<img src={{ asset('/images/'~rawcraft.raw.img) }} alt="">
							{{ rawcraft.raw.name }}
							<span class="badge badge-primary badge-pill">{{ rawcraft.quantity }}</span>
						</li>
					</th>
				</tr>
			{% endfor %}
		</ul>
		<tr>
			<th>
				<a href="{{ path('job', {'id': craft.job.id}) }}">
					<button type="button" class="btn btn-primary btn-lg btn-block">Return to
						{{ craft.job.name }}</button>
				</a>
			</th>
		</tr>
	</table>
{% endblock %}
